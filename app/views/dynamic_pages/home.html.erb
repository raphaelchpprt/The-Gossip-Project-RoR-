<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <%if current_user%>
      <h1 class="display-4"></strong>Bienvenue <strong><%= current_user.first_name %> <%= current_user.last_name %></strong></strong></h1>
    <% else %>
    <h1 class="display-4"></strong>Bienvenue sur <strong>The Gossip Project</strong></strong></h1>
    <% end %>
    <hr class="style1"><br>
    <p class="lead"><strong>Désires-tu créer un nouveau gossip ?</strong></p>
    <%= link_to "Créer un gossip", new_gossip_path, :class => "btn btn-primary" %>
  </div>
</div>

<div class = "container">

  <% if notice == "Gossip saved!" %>
    <div class="alert alert-success" role="alert">
      ✅&nbsp;&nbsp;Ton gossip a bien été créé !
    </div>
  <% end %>

  <% if notice == "Gossip modified!" %>
    <div class="alert alert-success" role="alert">
      ✅&nbsp;&nbsp;Le gossip a bien été modifié !
    </div>
  <% end %>

  <% if notice == "Gossip destroyed!" %>
    <div class="alert alert-success" role="alert">
      ❌&nbsp;&nbsp;Le gossip a bien été supprimé !
    </div>
  <% end %>

  <% if notice == "User saved!" %>
    <div class="alert alert-success" role="alert">
      ✅&nbsp;&nbsp;Le compte a bien été créé !
    </div>
  <% end %>

  <% if notice == "Logged in!" %>
    <div class="alert alert-primary" role="alert">
      🌐&nbsp;&nbsp;Tu es maintenant connecté.
    </div>
  <% end %>

  <% if notice == "Logged out!" %>
    <div class="alert alert-primary" role="alert">
      ❌&nbsp;&nbsp;Tu es maintenant déconnecté.
    </div>
  <% end %>

  <br>
  <h3>Voici la liste des gossips déjà existants :</h3><br>

  <% @gossips.each_with_index do |gossip, index| %>
    <div class="card w-75">
      <div class="card-body">
        <small class="text-muted">Gossip n°<%= gossip.id %> - <%= gossip.likes.count %> &#x2764;&#xFE0F;</small><p></p>
        <h5 class="card-title"><b>Auteur :</b> <%= gossip.user.first_name %> <%= gossip.user.last_name %></h5>
        <p class="card-text"><b>Titre :</b> <%= gossip.title %></p>
        <% if gossip.comments.present? %>
          <hr class="style1">
          <p class="card-text text-muted"><b></b> <%= gossip.comments.count %> commentaires</p>
        <% end %> 
        <%= link_to "Consulter la page du gossip", gossip_path(gossip.id), :class => "btn btn-primary" %>
      </div>
    </div>
  <br>
  <% end %>
</div>